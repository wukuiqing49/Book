<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:textSize="16sp"
            android:padding="2dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/item_bookstore_first_rankNum"
            android:text="@string/no_1"
            tools:text="NO.1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_bookstore_first_bookName"
            app:layout_constraintStart_toStartOf="@+id/item_bookstore_first_rankNum"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/item_bookstore_first_rankNum"
            android:textColor="@color/textBlack"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="斗罗大陆"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:id="@+id/item_bookstore_first_viewInfo" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/item_bookstore_first_bookName"
            app:layout_constraintStart_toStartOf="@+id/item_bookstore_first_rankNum"
            tools:text="13124点击"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_bookstore_first_classify" tools:text="玄幻"
            android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/item_bookstore_first_viewInfo"
            app:layout_constraintStart_toStartOf="@+id/item_bookstore_first_viewInfo"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_bookstore_first_author" tools:text="唐家三少"
            app:layout_constraintStart_toEndOf="@+id/item_bookstore_first_classify"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/item_bookstore_first_classify"/>
    <ImageView
            android:layout_width="200dp"
            android:layout_height="0dp" tools:srcCompat="@tools:sample/avatars"
            android:scaleType="fitEnd"
            android:id="@+id/item_bookstore_first_cover"
            app:layout_constraintTop_toTopOf="@+id/item_bookstore_first_rankNum"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:contentDescription="@string/cover" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"/>
    <View
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="@color/grey"
            android:layout_marginStart="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/item_bookstore_first_decor"/>
</android.support.constraint.ConstraintLayout>