<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/bg_card"
        android:elevation="2dp"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/item_book_image"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:transitionName="book_image"
            android:background="@color/grey"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" tools:srcCompat="@drawable/ic_book_cover_default"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:scaleType="fitXY"/>
    <TextView android:id="@+id/item_book_name"
              android:transitionName="book_name"
              tools:text="斗破苍穹hhhhhhhhhhhhhhhhhhhhhhhhhhh"
              android:textColor="@color/textColor"
              android:textSize="20sp"
              android:maxLines="1"
              android:ellipsize="end"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              app:layout_constraintStart_toEndOf="@+id/item_book_image" android:layout_marginStart="8dp"
              app:layout_constraintTop_toTopOf="@+id/item_book_image" android:layout_marginEnd="8dp"
              app:layout_constraintEnd_toStartOf="@+id/item_book_lastUpdateTime"/>
    <TextView android:id="@+id/item_book_lastUpdateTime"
              android:transitionName="book_lastUpdateTime"
              tools:text="更新：2018-11-01"
              android:ellipsize="start"
              android:singleLine="true"
              android:maxWidth="120dp"
              android:textColor="@color/textBlack_light"
              android:layout_width="wrap_content"
              android:textSize="12sp"
              android:gravity="end|center_vertical"
              android:layout_height="0dp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toTopOf="@+id/item_book_name"/>
    <TextView android:id="@+id/item_book_lastUpdateChapter"
              android:transitionName="book_lastUpdateChapter"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              tools:text="最新：大结局"
              android:maxLines="1"
              android:ellipsize="end"
              app:layout_constraintStart_toStartOf="@+id/item_book_name"
              app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
              android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/item_book_name"/>
    <ImageView android:layout_width="14sp"
               android:layout_height="14sp"
               android:layout_gravity="center_vertical"
               android:src="@drawable/ic_user"
               android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/item_book_lastUpdateChapter"
               app:layout_constraintStart_toStartOf="@+id/item_book_name" android:id="@+id/imageView"/>
    <TextView android:id="@+id/item_book_author"
              android:transitionName="book_author"
              tools:text="天蚕土豆"
              android:maxWidth="200dp"
              android:maxLines="1"
              android:ellipsize="end"
              android:gravity="center_vertical"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              app:layout_constraintStart_toEndOf="@+id/imageView" android:layout_marginStart="8dp"
              app:layout_constraintTop_toTopOf="@+id/imageView"
              app:layout_constraintBottom_toBottomOf="@+id/imageView"/>
    <TextView android:id="@+id/item_book_site"
              android:transitionName="book_site"
              tools:text="笔趣阁"
              android:maxLines="1"
              android:padding="2dp"
              android:textSize="12sp"
              android:textColor="@color/sourceColor"
              android:gravity="end|bottom"
              android:maxWidth="100dp"
              android:background="@drawable/bg_source"
              android:ellipsize="end"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toTopOf="@+id/imageView"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintBottom_toBottomOf="@+id/imageView"/>
    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp" app:srcCompat="@drawable/ic_book_update_flag"
            android:id="@+id/item_book_update_flag"
            app:layout_constraintTop_toTopOf="@+id/item_book_image"
            app:layout_constraintEnd_toEndOf="@+id/item_book_image" android:visibility="invisible"/>
    <TextView
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="0dp"
            app:autoSizeTextType="uniform"
            android:ellipsize="end"
            app:autoSizeMaxTextSize="14sp"
            android:id="@+id/item_book_cover_name" tools:text="斗破苍穹"
            app:layout_constraintTop_toTopOf="@+id/item_book_image"
            app:layout_constraintEnd_toEndOf="@+id/item_book_image"
            app:layout_constraintBottom_toBottomOf="@+id/item_book_image"
            app:layout_constraintStart_toStartOf="@+id/item_book_image" android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp" android:layout_marginTop="16dp" android:layout_marginBottom="16dp"
            android:visibility="invisible"/>
</android.support.constraint.ConstraintLayout>
